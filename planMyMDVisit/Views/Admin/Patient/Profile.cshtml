@model planMyMDVisit.Models.Domain.Patient;

<h1>User Profile</h1>

@if (Model?.User != null)
{
    <h1>Full Name: @Model.User.FullName()</h1>
    <h1>Username: @Model.User.UserName</h1>
    <h1>Email: @Model.User.Email</h1>
    <h1>Admin: @Model.User</h1>
}
else
{
